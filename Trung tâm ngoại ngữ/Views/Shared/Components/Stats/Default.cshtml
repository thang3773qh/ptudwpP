@model StatsViewModel

<!-- Counts Section -->
<section id="counts" class="section counts light-background">

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="1232" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Students</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@Model.Courses" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Khóa học</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@Model.Events" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Sự kiện</p>
                </div>
            </div><!-- End Stats Item -->

            <div class="col-lg-3 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@Model.Trainers" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Giảng viên</p>
                </div>
            </div><!-- End Stats Item -->

        </div>

    </div>

</section><!-- /Counts Section -->