@model LinguaCenter.Models.TbContact

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="col-xl">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Chi tiết liên hệ</h5>
                <small class="text-body float-end"><a asp-action="Index">Quay lại danh sách</a></small>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        Tên
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        Số điện thoại
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Phone)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        Mô tả
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Message)
                    </dd>
                    <dt class="col-sm-2">
                        Ngày tạo
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreatedDate)
                    </dd>
                    <dt class="col-sm-2">
                        Đã đọc
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IsRead)
                    </dd>
                </dl>
                <a asp-action="Edit" asp-route-id="@Model?.ContactId" class="btn btn-primary">Sửa</a>
            </div>
        </div>
    </div>
</div>