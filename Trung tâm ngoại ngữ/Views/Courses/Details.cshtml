@model TbCourse
@* @{
    List<TbTrainer> trainer = ViewBag.trainer;
} *@

<main class="main">

    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1>Chi tiết khóa học</h1>
                    </div>
                </div>
            </div>
        </div>
        <nav class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a href="index.html">Trang chủ</a></li>
                    <li class="current">Chi tiết khóa học</li>
                </ol>
            </div>
        </nav>
    </div><!-- End Page Title -->
    <!-- Course Details Section -->
    <section id="course-details" class="course-details section">

        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row">
                <div class="col-lg-8">

                    <!-- Course Header -->
                    <div class="course-header" data-aos="fade-up" data-aos-delay="200">
                        <div class="course-image">
                            <img src="@Model.Image" alt="Course Image" class="img-fluid">
                        </div>
                        <div class="course-meta">
                            <div class="instructor">
                                <img src="@Model.Trainer.Image" alt="Instructor" class="instructor-avatar">
                                <div class="instructor-info">
                                    <h6>@Model.Trainer.FullName</h6>
                                    <span>@Model.Trainer.Speciality</span>
                                </div>
                            </div>
                            <div class="course-stats">
                                <div class="stat-item">
                                    <i class="bi bi-people"></i>
                                    <span>@ViewBag.OrderCount Học sinh</span>
                                </div>
                                <div class="stat-item">
                                    <i class="bi bi-clock"></i>
                                    <span>@Model.ContentHours Giờ</span>
                                </div>
                                <div class="stat-item">
                                    <i class="bi bi-calendar"></i>
                                    <span>@Model.TotalWeeks Tuần</span>
                                </div>
                            </div>
                        </div>
                    </div><!-- End Course Header -->
                    <!-- Course Content -->
                    <div class="course-content" data-aos="fade-up" data-aos-delay="300">
                        <h2>@Model.Title</h2>

                        <div class="course-description">
                            <p>
                                @Html.Raw(@Model.Description)
                            </p>
                        </div>

                    </div><!-- End Course Content -->

                </div>

                <div class="col-lg-4">

                    <!-- Course Sidebar -->
                    <div class="course-sidebar" data-aos="fade-up" data-aos-delay="200">

                        <!-- Pricing Card -->
                        <div class="pricing-card">
                            <div class="price">
                                <span class="currency">VND</span>
                                <span class="amount">@Model.PriceSale</span>
                                <span class="period">/Khóa học</span>
                            </div>
                            <div class="original-price">@Model.Price VND</div>

                            <div class="course-features">
                                <div class="feature">
                                    <i class="bi bi-clock"></i>
                                    <span>@Model.ContentHours giờ nội dung học</span>
                                </div>
                                <div class="feature">
                                    <i class="bi bi-trophy"></i>
                                    <span>Chứng chỉ hoàn thành khóa học</span>
                                </div>
                                <div class="feature">
                                    <i class="bi bi-phone"></i>
                                    <span>Truy cập trên điện thoại và máy tính</span>
                                </div>
                                <div class="feature">
                                    <i class="bi bi-infinity"></i>
                                    <span>Truy cập trọn đời</span>
                                </div>
                            </div>

                            <a class="btn-enroll btn btn-primary"
                               asp-controller="Payment"
                               asp-action="Index"
                               asp-route-courseId="@Model.CourseId">
                                Tham gia ngay
                            </a>
                        </div><!-- End Pricing Card -->
                        <!-- Course Info -->
                        <div class="course-info-card">
                            <h4>Thông tin khóa học</h4>
                            <div class="info-item">
                                <span class="label">Cấp độ:</span>
                                <span class="value">@Model.Level</span>
                            </div>
                            <div class="info-item">
                                <span class="label">Học sinh:</span>
                                <span class="value">@ViewBag.OrderCount đã tham gia</span>
                            </div>
                            <div class="info-item">
                                <span class="label">Ngôn ngữ:</span>
                                <span class="value">@Model.Language</span>
                            </div>
                            <div class="info-item">
                                <span class="label">Yêu cầu:</span>
                                <span class="value">@Model.Prerequisites</span>
                            </div>
                            <div class="info-item">
                                <span class="label">Cập nhật lần cuối:</span>
                                <span class="value">@Model.LastUpdate</span>
                            </div>
                        </div><!-- End Course Info -->

                    </div><!-- End Course Sidebar -->

                </div>

            </div>

        </div>

    </section>

</main>